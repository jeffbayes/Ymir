<!DOCTYPE html>
<html>
<head>
  <title>Ymir</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="bower_components/jquery/dist/jquery.js"></script>
  <script src="jqueryui.js"></script>
  <script src="jedit.js"></script>
  <script src="models.js"></script>
  <script src="map.js"></script>
  <script>
  	$().ready( function() {
  		$('.edit_area').editable(function(value, settings) {
  		     $(this).html(value);
  		     newcities[window.currentCity][3] = value;
  		  }, {
  		     type    : 'textarea',
  		     submit  : 'OK',
  		     cancel    : 'Cancel',
  		     cssclass: 'inputbox'
  		 });
  		// $( "#map img" ).draggable();


  		window.makeNewCities = false;
  		window.pannelShowing = false;
  		window.currentCity = null;
  		
  		var newcities = [
  			[100, 100, 'Gherlon', 'foo' ],
  			[200,300, 'Gern', 'description']
  		];

  		$('#map #wrap img').click(function(e) {
  		  if(window.makeNewCities){
  		  	var offset = $(this).offset();
  		  	var x = e.clientX - offset.left - 10;
  		  	var y = e.clientY - offset.top - 10;
  		  	var pos = [x,y,"title", "description"];

  		  	newcities[newcities.length] = pos;
  		  	renderCityDot(pos, newcities.length);
  		  	window.currentCity = newcities.length;
  		  }
  		});

  		$('.close').click(function(){
  			pannelToggle();
  		});
  		
  		// toggle cities class
  		$("#city").click(function(){
  			window.makeNewCities = !window.makeNewCities;
  			console.log(window.makeNewCities);
  			$("#city").toggleClass('selected');
  		});

  		function printCities(cities){
  			for(i=0; i<cities.length; i++){
  				renderCityDot(cities[i], i);
  			}
  		}


  		function pannelToggle(){
  			if(window.pannelShowing){
  				$('#content').animate({
  					right: "+=400"
  					}, 500, function() {
  				});
  			}
  			else{
  				$('#content').animate({
  					right: "-=400"
  					}, 500, function() {
  				});
  			}
  			window.pannelShowing = !window.pannelShowing;
  		}

  		function renderCityDot(city, i){
  			$('#wrap').prepend('<div class="click-target target' + i +'" style="top:' + city[1] + 'px; left:' + city[0] + 'px;" value="' + i +'"></div>');
  			$('.target' + i).click(function(){
  				if(i == currentCity || pannelShowing == true){
  					pannelToggle();
  				}
  				
  				window.currentCity = $(this).attr('value');
  				console.log(window.currentCity);
  				pannelContentUpdate(window.currentCity);
  			});
  		}

  		function pannelContentUpdate(i){
  			$('#content h1').html(newcities[i][2]);
  			$('#content p').html(newcities[i][3]);
  		}

  		printCities(newcities);

  		function cityToJson(city){
  			return {x: city[0], y: city[1], name:city[2], notes: city[3]}
  		}

  		// console.log(cityToJson(newcities[0]));

  		function saveCities(cities){
  			for(i=0; i< cities.length; i++ ){
  				var json = cityToJson(cities[i]);
  				console.log(json);
  				
  				$.ajax({
					type: "POST",
					url: "/locations",
					data: json
  				})
  				.done(function( msg ) {
  					alert( "Data Saved: " + msg );
  				});
  			}
  		}
  		function getCities(){
  			// ajax request
  		}

  		saveCities(newcities);

  	});
  </script>
  <style>
  	#map svg, html, body{
  		width: 100%;
  		height: 100%;
  		padding:0px;
  		margin:0px;
  	}
  	#map{
  		position: absolute; top: 0; left: 0;
  		height: 100vh;
  		width: 100vw;
  		overflow: hidden;
  	}
  	html{
  		background: rgba(0,0,0,1);
  	}
  	.click-target{
  		background: rgba(200,0,0,.7);
  		border-radius: 20px;
  		height:20px;
  		width:20px;

  		margin-bottom:-20px;
  		margin-right:-20px;
  		
  		display: block;
  		position: relative;
  		z-index: 9;
  		/*float:left;*/
  	}
  	.click-target:hover{
  		background: rgba(240,0,0,.7);
  	}
  	#content{
  		position: absolute;
  		height: 100vh;
  		width: 350px;
  		right:0px;
  		padding:20px;
  		background: rgba(30,30,30,1);
  		z-index: 90;
  		color:white;
  	}
  	#city{
  		position: absolute;
  		top:20px;
  		left:20px;
  		z-index: 90;
  		height:40px;
  		margin-bottom:-40px;
  		margin-right:-40px;
  		width:40px;
  		display: block;
  		position: relative;
  		background: black;
  		color: rgba(255,255,255,1);
  		border:0px;
  		/*line-height: 40px;*/
  		outline: none;
  	}
  	.selected{
  		color: rgba(255,255,255,.9) !important;
  		background: red !important;
  	}
  	.close{
  		opacity: 1 !important;
  		/*font-size: 2rem;*/
  		font-weight: 200;
  		float:right;
  		background: none !important;
  		text-shadow:none;
  		color:white;
  		position: relative;
  		top:-4.25rem;
  		
  	}
  	.close:hover{
  		color:red;
  	}
  	#wrap img{
  		min-width: 100%;
  	}
  	#content img{
  		width:370px;
  		position:relative;
  		top:-20px;
  		left:-20px;
  		margin-bottom: -20px;

  	}
  	.inputbox{
  		color:black;

  	}
  </style>
</head>
<body>

<%= yield %>

</body>
</html>